#!/usr/bin/perl

$srcdir = shift @ARGV;
$dstdir = shift @ARGV;
opendir DIR, $srcdir or die($!);
@file = readdir(DIR);
closedir DIR;

map{
  if(/\.java$/ && !-e "$dstdir/$_"){
    print "$dstdir/$_ not exist\n";
  }
}@file;

__END__
open F, ">UDF_$class.java" or die($!);

print F<<_T_
/*
*/
