public class UDF_$class extends jp.ne.heart.udfv.$ref.UDF_$class
{
/**
\@param elem	¿Æ
\@param name	Ì¾Á°
*/
  public UDF_$class(UDF_ElementBase elem, String prefix, String name){
     super(elem, prefix, name == null ? "UDF_$class" : name);
  }
}
_T_
